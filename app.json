{
  "name": "X-wing Overlayer",
  "description": "A system to generate overlays for streaming of the X-wing Miniatures tabletop game ",
  "repository": "https://github.com/sheepeatingtaz/xwingoverlayer",
  "keywords": [
    "django",
    "channels",
    "websockets"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    },
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": [
      "python manage.py migrate",
      "python manage.py bower install",
      "python manage.py collectstatic --noinput",
      "python manage.py import_xwing_data"
    ]
  },
  "env": {
    "SECRET_KEY": {
      "description": "Django's SECRET_KEY setting",
      "generator": "secret"
    }
  },
  "addons": [
    "heroku-postgresql",
    "heroku-redis"
  ],
  "formation": {
    "web": {
      "quantity": 1,
      " size": "Free"
    },
    "worker": {
      "quantity": 1,
      "size": "Free"
    }
  }
}